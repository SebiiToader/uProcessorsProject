<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan"
    android:padding="8dp"
    tools:context=".PinControl">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/led_control"
        android:textColor="@color/black"
        android:textSize="24dp" />

    <SeekBar
        android:id="@+id/pwr_seekbar"
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:layout_below="@+id/textView3"
        android:layout_alignEnd="@+id/pwr"
        android:layout_alignRight="@+id/pwr"
        android:layout_marginTop="15dp"
        android:indeterminate="false"
        android:max="255"
        android:progress="1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/off_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="69dp"
        android:text="Luminozitate"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp" />

    <Button
        android:id="@+id/on_btn"
        android:layout_width="112dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/on"
        android:textColor="?attr/colorPrimary"
        android:textSize="32sp" />

    <Button
        android:id="@+id/off_btn"
        android:layout_width="112dp"
        android:layout_height="80dp"
        android:layout_below="@+id/on_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/off"
        android:textColor="?attr/colorPrimary"
        android:textSize="32sp" />

    <Button
        android:id="@+id/disc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/pink"
        android:padding="8dp"
        android:text="@string/deconecteaza_te" />

    <TextView
        android:id="@+id/pwr"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pwr_seekbar"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:text="0%"
        android:textAlignment="textEnd"
        android:textSize="32dp" />

</RelativeLayout>